<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio.main_image, "main"), width: '100%'%>
    </div>
    
    <div class="col-md-5">
      
      <h1>
        <%= @portfolio.title %>
      </h1>
      
      <em>
        <%= @portfolio.subtitle %>
      </em>
      
      <p>
        <%= @portfolio.body %>
      </p>
      
      <hr>
      <H2>Technologies Used:</H2>
      <% @portfolio.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
      
      <% if logged_in?(:site_admin) %>
      <div>
        <%= link_to "Edit Item", edit_portfolio_path(@portfolio), class: 'btn btn-warning' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

