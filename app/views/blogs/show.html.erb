
<div class="col-sm-8 blog-main">
  
  <h2><%= @blog.title %></h2>
  
  <p>
    <%= @blog.topic.title %>
  </p>
  
  <p>
    <%= @blog.body %>
  </p>
  
  <%= render 'comments/comment_form' %>
  <!--Start of comment-->
  <div id="comments" data-blog-id="<%=@blog.id %>">
    <%= render @blog.comments %>
  </div>
  <!--End of comment-->
  <hr>
  <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-primary btn-sm" if logged_in?(:site_admin)  %>
  <%= link_to 'Back', blogs_path, class: "btn btn-primary btn-sm" %>
  
  
</div><!-- /.blog-main -->
